<div class="container col-12 col-md-6 mx-auto">
  <h1 class="mb-4 text-start" style="font-size: 32px; font-family: 'Roboto', sans-serif; color: #007bff;"><%= @article.title %></h1>

  <div class="mb-4" style="text-align: justify;">
    <%= simple_format(@article.content, class: "lead text-start fw-light", style: "font-family: 'Roboto', sans-serif;") %>
  </div>

  <div class="d-flex justify-content-start gap-2 mb-3">
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-secondary", style: "background-color: #0d6efd; border-color: #0d6efd;" %>
    <%= button_to "Delete", @article, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger", style: "background-color: #0d6efd; border-color: #0d6efd;" %>
  </div>

  <%= link_to "Back to list", articles_path, class: "btn btn-link", style: "color: #0d6efd;" %>
</div>

